{
  "manifest_version": 3,
  "name": "ScholarSnip (Backend + Classic UI)",
  "version": "0.8.0",
  "description": "Summarize/build curriculum with a secure server-side key and GitHub standards. Classic on-page UI + Options.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3001/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ]
}