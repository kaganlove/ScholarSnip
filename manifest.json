{
  "manifest_version": 3,
  "name": "ScholarSnip - Transcript â†’ Summary & Curriculum",
  "version": "1.2.1",
  "description": "Open a YouTube transcript, summarize it, and generate curriculum (objectives, competency, lesson outline).",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "action": {
    "default_title": "ScholarSnip",
    "default_popup": "popup.html",
    "default_icon": { "16": "icon16.png", "32": "icon32.png" }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "16": "icon16.png", "32": "icon32.png" }
}